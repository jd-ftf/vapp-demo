.wd-drop-menu{display:flex;background-color:#fff;box-sizing:border-box;color:#333;font-size:14px}.wd-drop-menu__title{flex:1;padding:0 15px;height:34px;line-height:34px;position:relative;overflow:hidden;text-overflow:ellipsis;white-space:nowrap}.wd-drop-menu__title:before{top:0;transform:scaleY(.5);transform-origin:center top}.wd-drop-menu__title:after,.wd-drop-menu__title:before{position:absolute;content:"";width:100%;height:1px;left:0;background:#eee;z-index:1}.wd-drop-menu__title:after{top:33px;transform:scaleY(.5);transform-origin:center bottom}.wd-drop-menu__title.is-disabled{color:#d2d2d2}.wd-drop-menu__arrow{display:inline-block;transition:transform .3s;transform:scale(.6)}.wd-drop-menu__arrow.is-retract{transform:scale(.6) rotate(-180deg);transform-origin:center center}