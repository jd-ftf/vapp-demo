<view
  class="wd-switch custom-class {{ disabled ? 'is-disabled' : '' }} {{ value === activeValue ? 'is-checked' : '' }}"
  style="font-size: {{ size }}; background: {{ value === activeValue ? activeColor : inactiveColor }}; border-color: {{ value === activeValue ? activeColor : inactiveColor }};"
  bindtap="switchValue"
>
  <view
    class="wd-switch__circle"
    style="{{ (value === activeValue && activeColor || value !== activeValue && inactiveColor) ? 'box-shadow: none;' : '' }}"
  ></view>
</view>