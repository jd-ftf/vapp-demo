.wd-tag{display:inline-block;padding:0 5px;color:#fff;border-radius:2px;font-size:0;transition:opacity .3s;vertical-align:middle;background:#777;border:1px solid transparent}.wd-tag.is-plain{background:transparent;color:#777;border-color:#777}.wd-tag.is-primary{background:#0083ff;border:1px solid transparent}.wd-tag.is-primary.is-plain{background:transparent;color:#0083ff;border-color:#0083ff}.wd-tag.is-danger{background:#ff4c4c;border:1px solid transparent}.wd-tag.is-danger.is-plain{background:transparent;color:#ff4c4c;border-color:#ff4c4c}.wd-tag.is-warning{background:#ff8200;border:1px solid transparent}.wd-tag.is-warning.is-plain{background:transparent;color:#ff8200;border-color:#ff8200}.wd-tag.is-success{background:#30be05;border:1px solid transparent}.wd-tag.is-success.is-plain{background:transparent;color:#30be05;border-color:#30be05}.wd-tag__icon{display:inline-block;margin-right:3px;margin-top:1px;font-size:10px;vertical-align:middle}.wd-tag__add-text,.wd-tag__text{display:inline-block;font-size:12px;vertical-align:middle}.wd-tag__add-text{width:60px;height:17px;min-height:17px}.wd-tag__close{display:inline-block;margin-left:10px;font-size:14px;vertical-align:middle;color:#c5c5c5}.wd-tag.is-small .wd-tag__text{font-size:10px}.wd-tag.is-small .wd-tag__add-text{height:14px;min-height:14px;font-size:10px}.wd-tag.is-small .wd-tag__close{transform:translateY(1px);margin-left:4px;font-size:12px}.wd-tag.is-large{padding:3px 10px}.wd-tag.is-large .wd-tag__close{margin-left:18px}