.wd-picker-view{position:relative;background:#fff}.wd-picker-view__columns{display:flex;overflow:hidden}.wd-picker-view__mask{top:0;bottom:0;background-image:linear-gradient(180deg,hsla(0,0%,100%,.9),hsla(0,0%,100%,.5)),linear-gradient(0deg,hsla(0,0%,100%,.9),hsla(0,0%,100%,.5));background-position:top,bottom;background-size:100% 99px;background-repeat:no-repeat;z-index:1}.wd-picker-view__mask,.wd-picker-view__select{position:absolute;right:0;left:0;pointer-events:none}.wd-picker-view__select{display:flex;justify-content:space-around;top:50%;transform:translate3d(0,-50%,0);z-index:3}.wd-picker-view__select:after,.wd-picker-view__select:before{position:absolute;display:block;content:"";width:100%;height:1px;left:0;transform:scaleY(.5);background:#eee}.wd-picker-view__select:before{top:0}.wd-picker-view__select:after{bottom:0}.wd-picker-view__loading{position:absolute;display:flex;top:0;right:0;bottom:0;left:0;align-items:center;justify-content:center;z-index:2;background:hsla(0,0%,100%,.8)}.wd-picker-view-column{flex:1;font-size:16px;color:#292929;text-align:center;transition-timing-function:cubic-bezier(.28,.8,.63,1)}.wd-picker-view-column__item--active{font-size:18px}.wd-picker-view-column__item--disabled{color:#dedede}