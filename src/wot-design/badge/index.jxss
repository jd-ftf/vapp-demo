.wd-badge{position:relative;vertical-align:middle;display:inline-block}.wd-badge__content{display:inline-block;height:18px;line-height:18px;padding:0 6px;background-color:#e2231a;border-radius:9px;color:#fff;font-size:12px;text-align:center;white-space:nowrap}.wd-badge__content.is-fixed{position:absolute;top:0;right:9px;transform:translateY(-50%) translateX(100%)}.wd-badge__content.is-fixed.is-dot{right:4px}.wd-badge__content.is-dot{height:8px;width:8px;padding:0;right:0;border-radius:50%}.wd-badge__content--primary{background-color:#0083ff}.wd-badge__content--success{background-color:#00c740}.wd-badge__content--warning{background-color:#ffb300}.wd-badge__content--info{background-color:#909399}.wd-badge__content--danger{background-color:#e2231a}